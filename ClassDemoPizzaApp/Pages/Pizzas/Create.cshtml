@page
@model ClassDemoPizzaApp.Pages.Pizzas.CreateModel
@{
}
<h1>Opret en ny Pizza</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.Id" class="control-label">Medlems Id</label><br>
                <input asp-for="@Model.Id" class="form-control" /><br>
                <span asp-validation-for="@Model.Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Navn</label><br>
                <input asp-for="@Model.Navn" class="form-control" /><br />
                <span asp-validation-for="@Model.Navn" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Pris</label><br>
                <input asp-for="@Model.Price" class="form-control" /><br />
                <span asp-validation-for="@Model.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Pris</label><br>
                <select   asp-for="Slags" class="form-control">
                    @foreach (var pt in Model.PizzaTyper)
                    {
                        <option value="@pt">@pt</option>
                    }
                </select>
            </div>


            <div class="form-group">
                <input type="submit" value="Opret" />
            </div>

        </form>
    </div>
</div>