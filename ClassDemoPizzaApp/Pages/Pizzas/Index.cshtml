@page
@using PizzaLib.model;
@model ClassDemoPizzaApp.Pages.Pizzas.IndexModel
@{
}

<h1>Liste af Pizza</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Navn</th>
            <th>Pris</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.Pizzaer)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Name</td>
                <td>@p.Pris</td>
                @if(p is PizzaEnum)
                {
                    PizzaEnum pe = p as PizzaEnum;
                    <td>@pe.Slags</td>
                }
                else
                {
                    <td></td>
                }
                
                <td><a asp-page="Delete" asp-route-id="@p.Id">Delete</a> | <a asp-page="Edit" asp-route-id="@p.Id">Edit</a></td>
            </tr>
        }
    </tbody>
</table>

<p></p>
<p></p>
<form method="get">
    <button asp-page="Create" class="btn btn-primary">Opret Pizza</button>
</form>